#include<iostream>
#include<Windows.h>
#include<iomanip>
using namespace std;

struct Circle
{
	float CoordinatesOfTheCenter[2];
	float Radius;
	string Color;
};

int main()
{
	SetConsoleCP(1251);
	SetConsoleOutputCP(1251);
	
	int N;
	cout << "Количество окружностей\n";
	cin >> N;
	Circle* circle = new Circle[N];

	for (int i = 0; i < N; i++)
	{
		cout << "Введите координаты центра " << i + 1 << "-ой окружности\n";
		for (int j = 0; j < 2; j++)
		{
			cin >> circle[i].CoordinatesOfTheCenter[j];
		}
		cout << "Введите радиус " << i + 1 << "-ой окружности\n";
		cin >> circle[i].Radius;
		cout << "Введите цвет " << i + 1 << "-ой окружности\n";
		cin >> circle[i].Color;
	}

	cout << "все окружности\n";
	for (int i = 0; i < N; i++)
	{
		cout << setw(2)<<i + 1 << " ";
		int flag = 0;
		cout << "(";
		for (int j = 0; j < 2; j++)
		{
			cout << circle[i].CoordinatesOfTheCenter[j];
			flag++;
			if (flag==1)
				cout << ";";
		}
		cout << ") ";
		cout << "R=" << circle[i].Radius << " ";
		cout << circle[i].Color << endl;
	}
}
